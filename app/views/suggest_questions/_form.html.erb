<%= simple_form_for @suggest_question do |f| %>
  <%= render "shared/error_messages", object: @suggest_question %>
  <div class="form-group">
    <%= f.label :subject_id %>
    <%= f.select :subject_id,
      @subjects.collect {|subject| [subject.name, subject.id]},
        {}, {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :content, placeholder: t(".question_content"),
      error: t(".question_content_error") %>
  </div>
  <div class="form-group">
    <%= f.label :answer_type %>
    <%= f.select :answer_type, SuggestQuestion.answer_types.keys.to_a, {},
      {class: "form-control"} %>
  </div>
  <div id ="answers_field">
    <%= f.simple_fields_for :suggest_answers do |answer_builder| %>
      <%= render "suggest_answer_fields", f: answer_builder %>
    <% end %>
    <div id ="answer_field"></div>
    <div class="add_fields">
      <%= link_to_add_fields t(".add_answer"), f, :suggest_answers %>
    </div>
  </div>
  <%= f.submit yield(:submit_button),
    class: "btn btn-primary space-top-submit" %>
<% end %>
